<Window x:Class="FastFoodGame.Presentation.UserManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="UserManagement" Width="300" Height="auto" WindowStartupLocation="CenterOwner" SizeToContent="Height" Loaded="UserManagement_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ScrollViewer Height="auto">
            <ListBox Name="lstUsers" Grid.Row="0" Height="auto"/>
        </ScrollViewer>

        <StackPanel Name="stpButtons" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,5">
            <Button Name="btnNew" Content="New" FontSize="14" Margin="0,0,5,0" Height="auto"  Click="btnNew_Click"/>
            <Button Name="btnEdit" Content="Edit" FontSize="14" Margin="0,0,5,0" Height="auto" Click="btnEdit_Click"/>
            <Button Name="btnClose" Content="Close" FontSize="14" Height="auto" Click="btnClose_Click"/>
        </StackPanel>
    </Grid>
</Window>

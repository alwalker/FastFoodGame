<Window x:Class="FastFoodGame.Presentation.InputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InputWindow" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" WindowStyle="ToolWindow">    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <TextBox Name="txtInput" Grid.Column="0" FontSize="14" Width="75" Margin="5" TextChanged="txtInput_TextChanged"/>
        <Button Name="btnOk" Grid.Column="1" Content="OK" Click="btnOk_Click"/>
    </Grid>
</Window>
